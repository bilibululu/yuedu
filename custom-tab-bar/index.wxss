.tab-bar {
  position: fixed;
  bottom: 0px;
  left: 0px;
  right: 0px;
  width: 100%;
  height: 130rpx;
  background: rgb(235, 233, 233);
  display: flex;
  flex-direction: row;
}

.tab-bar-border {
  background-color: white;
  position: absolute;
  left: 0px;
  top: 0px;
  width: 100%;
  height: 20rpx;
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding-top: 26rpx;
}

.cover-image {
  width: 56rpx;
  height: 56rpx;
}

.tab-bar-item cover-view {
  font-size: 20rpx;
}

.center {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  bottom: 0rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  background-color: #f8f8f8;
  box-shadow: 0 0 10rpx rgba(0,0,0,0.2);
}



